{
  "manifest_version": 3,
  "name": "DispatchTracker",
  "version": "5.1",
  "description": "Best helper for Dispatchers",
  "permissions": [
    "cookies",
    "webRequest",
    "storage",
    "notifications",
    "offscreen",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "./html/popup.html",
    "default_icon": {
      "16": "assets/16.png",
      "48": "assets/48.png",
      "128": "assets/128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["./html/loadbox.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/16.png",
    "48": "assets/48.png",
    "128": "assets/128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
