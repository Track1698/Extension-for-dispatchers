{
  "manifest_version": 3,
  "name": "DispatchTracker",
  "version": "2.8",
  "description": "This extension will help you with CentralDispatch, ACV and SuperDispatch to book a job easier",
  "permissions": [
    "webRequest",
    "storage",
    "notifications",
    "offscreen",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/16.png",
      "48": "assets/48.png",
      "128": "assets/128.png"
    }
  },
  "icons": {
    "16": "assets/16.png",
    "48": "assets/48.png",
    "128": "assets/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
